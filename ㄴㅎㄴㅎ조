<script>
let items = [];
let points = 200; // ì´ˆê¸° í¬ì¸íŠ¸
let carbonSaved = 0;

// ì˜ˆì‹œ ë°ì´í„°
items.push({title:"ì¤‘ê³  í‚¤ë³´ë“œ",desc:"ì‘ë™ ì˜ ë©ë‹ˆë‹¤.",region:"ì„œìš¸íŠ¹ë³„ì‹œ",img:"https://images.unsplash.com/photo-1593642634367-d91a135587b5?auto=format&fit=crop&w=800&q=60"});
items.push({title:"ë‹ˆíŠ¸ ê°€ë””ê±´",desc:"ë”°ëœ»í•œ ìƒ‰ê°, ê¹¨ë—í•´ìš”.",region:"ê²½ê¸°ë„",img:"https://images.unsplash.com/photo-1503341455253-b2e723bb3dbb?auto=format&fit=crop&w=800&q=60"});

function renderItems(){
  const grid=document.getElementById('itemGrid');
  grid.innerHTML='';
  items.forEach((it,i)=>{
    const card=document.createElement('div');
    card.className='card';
    card.innerHTML=`
      <img src="${it.img}" alt="${it.title}">
      <div class="card-content">
        <h3>${it.title}</h3>
        <p>${it.desc}</p>
        <div class="card-footer">
          <span class="tag">${it.region}</span>
          <button class="exchange-btn" data-index="${i}">êµí™˜</button>
        </div>
      </div>`;
    grid.appendChild(card);
  });
}
renderItems();

document.getElementById('openShopBtn').onclick=()=>{document.getElementById('sidePanel').classList.add('open');};
document.getElementById('closePanel').onclick=()=>{document.getElementById('sidePanel').classList.remove('open');};

// êµí™˜ ë²„íŠ¼ í´ë¦­ ì‹œ
document.addEventListener('click',e=>{
  if(e.target.classList.contains('exchange-btn')){
    alert('ê±°ë˜ ìš”ì²­ì´ ì „ì†¡ë˜ì—ˆìŠµë‹ˆë‹¤. íŒë§¤ìê°€ ìˆ˜ë½ ì‹œ ê±°ë˜ê°€ ì§„í–‰ë©ë‹ˆë‹¤.');
    points+=20;
    carbonSaved+=0.3;
    updateCarbon();
  }
});

// ìƒì  êµ¬ë§¤ ë²„íŠ¼
document.querySelectorAll('#shopContainer button').forEach(btn=>{
  btn.onclick=()=>{
    const cost=parseInt(btn.dataset.cost);
    if(points>=cost){
      points-=cost;
      alert(`êµ¬ë§¤ ì™„ë£Œ! í˜„ì¬ í¬ì¸íŠ¸: ${points}P`);
    }else alert('í¬ì¸íŠ¸ê°€ ë¶€ì¡±í•©ë‹ˆë‹¤.');
  };
});

function updateCarbon(){
  document.getElementById('carbonText').textContent=`ì ˆê°ëœ íƒ„ì†Œ: ${carbonSaved.toFixed(2)} kg COâ‚‚`;
  document.getElementById('carbonBar').style.width=Math.min(carbonSaved*10,100)+'%';
}
</script>

